if [ "$MODE" == "dev" ]; then
	export REDIS_URL="redis://localhost:10111"
	export HUBOT_AUTH_ADMIN="1"
else
	export REDIS_URL="redis://redistogo:e193ba17aad3a35f57957478c01f97dc@greeneye.redistogo.com:10139"
	export HUBOT_AUTH_ADMIN="1239429"
fi

exec node_modules/.bin/hubot "$@"

